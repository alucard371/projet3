{% extends "layout.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
<p>
    <h2>{{ article.title }}</h2>
    <p>{{ article.content }}</p>
    <h3>Commentaires</h3>
    {% for comment in comments %}
        <strong>{{ comment.author.username }}</strong> dit : {{ comment.content }}<br>
    {% else %}
        Pas de commentaires
    {% endfor %}

    {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        <br>
    {% else %}
        <br><button id="show" class="btn btn-default">Ajouter un commentaire</button>
    {%  endif %}


        {% if commentForm %}
        <div id="commentForm">
            {{ form_start(commentForm) }}
            <div class="form-group">
                {{ form_errors(commentForm.content) }}
                {{ form_widget(commentForm.content, { 'attr':  {
                    'rows': '4',
                    'class': 'form-control textarea',
                    'placeholder': 'Entrez votre commentaire'
                }}) }}
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Publiez le commentaire" />
            </div>
            {{ form_end(commentForm) }}
        </div>
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{ flashMessage }}
            </div>
        {% endfor %}
    {% else %}
        <a href="{{ path('login') }} ">Connectez-vous</a> pour ajouter un commentaire.
    {% endif %}
</p>
{% endblock %}